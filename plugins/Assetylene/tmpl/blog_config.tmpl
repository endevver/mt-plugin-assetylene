    <input type="text" name="centeralign_class" name="centeralign_class" value="<mt:var name="centeralign_class">" /><br/>
    <div style="float:left;width:6em;"><__trans phrase='LeftAlign'></div>
    <input type="text" name="leftalign_class" name="leftalign_class" value="<mt:var name="leftalign_class">" />
</mtapp:setting>

