  label="<__trans phrase="Limit size of Link Image">"
  hint="<__trans phrase="Hint">">
    <label for="remove_popup"><__trans phrase='Always Limited in'></label>
    <input type="checkbox" name="resize_link" id="resize_link"<mt:if name="resize_link"> checked="checked"</mt:if> value="1" />
    <script type="text/javascript">
    jQuery(document).ready(function(){
      if(jQuery('input#resize_link').attr('checked') == false) {
        jQuery('#max_link_size-field').hide();
      }
      jQuery('input#resize_link').click(function() {
        if(jQuery('input#resize_link').attr('checked') == true) {
          jQuery('#max_link_size-field').show();
        } else {
          jQuery('#max_link_size-field').hide();
        }
      });
    });
