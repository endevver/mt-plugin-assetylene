<mtapp:setting
  id="cleanup_insert"
  label="<__trans phrase="CleanUp Asset Insert">"
  hint="<__trans phrase="Hint">">
    <select name="cleanup_insert"
              id="cleanup_insert"
    >
      <option<mt:unless name="cleanup_insert"> selected="selected"</mt:unless> value="0"><__trans phrase="No CleanUp"></option>
      <option<mt:if name="cleanup_insert" eq="3"> selected="selected"</mt:if> value="3"><__trans phrase="Only remove style"></option>
      <option<mt:if name="cleanup_insert" eq="1"> selected="selected"</mt:if> value="1"><__trans phrase="Add Class for Wrap Paragraph tag"></option>
      <option<mt:if name="cleanup_insert" eq="4"> selected="selected"</mt:if> value="4"><__trans phrase="Add Class for Wrap Div tag"></option>
      <option<mt:if name="cleanup_insert" eq="2"> selected="selected"</mt:if> value="2"><__trans phrase="Add Class for Image tag"></option>
    </select>
    <script type="text/javascript">
    jQuery(document).ready(function(){
      var selectNo = jQuery('#cleanup_insert').val();
      if ((selectNo == 0)||(selectNo == 3)) {
        jQuery('#alignment_class-field').hide();
      }
      jQuery('#cleanup_insert').change(function(){
        selectNo = jQuery('#cleanup_insert').val();
        if ((selectNo == 0)||(selectNo == 3)) {
          jQuery('#alignment_class-field').hide();
        } else {
          jQuery('#alignment_class-field').show();
        }
      });
    });
    </script>
</mtapp:setting>

